    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsify": "^5.0.4",
    "tsup": "^7.2.0",
    "typescript": "^4.8.4",
    "uglifyify": "^5.0.2",
    "url": "^0.11.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@types/node": "^18.14.6",
    "vitest": "^0.34.1"
  },
  "browserify": {
    "plugins": [
      "tsify"
    ],
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".d.ts",
            ".tsx",
            ".ts"
          ],
          "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript"
          ],
          "plugins": [
            "@babel/plugin-syntax-dynamic-import",
            "@babel/plugin-transform-runtime"
          ]
        }
      ]
    ]
  }
