    "babel-loader": "^9.1.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "browserify-aes": "^1.2.0",
    "buffer": "^6.0.3",
    "cipher-base": "^1.0.4",
    "crypto-browserify": "^3.12.0",
    "https-browserify": "^1.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
