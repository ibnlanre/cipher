    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@types/cipher-base": "^1.0.1",
    "@types/randombytes": "^2.0.0",
    "@webpack-cli/generators": "^3.0.0",
    "assert": "^2.0.0",
