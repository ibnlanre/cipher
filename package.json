  },
  "keywords": [
    "encrypt",
    "decrypt",
    "AES",
    "encode",
    "decode",
    "cipher",
    "hash",
    "security"
  ],
  "license": "MIT",
  "scripts": {
    "typings": "tsc --project ./",
