{
  "name": "@ibnlanre/cipher",
  "description": "for AES encryption or decryption",
  "version": "2.2.0",
  "module": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": true,
